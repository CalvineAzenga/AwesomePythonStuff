<FlatButton@ButtonBehavior+Label>
    font_size: 16


<OperatorWindow>:
    id: main_win
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: self.bg2
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id:header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: main_win.bg2
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "CalvoPOS System"
            size_hint_x: .9
            bold: True
            background_color: main_win.bg2
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            text: 'Algies'
            color: (1,1,1,1)
    
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: main_win.bg2
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item:'
            background_normal: ''
            background_color: (.06,.32,.32,1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (.06,.4,.4,1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (.06,.65,.65,1)
            size_hint_x: .2

    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: .7
            spacing: 10

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: main_win.bg2
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: 'Qty'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: .3
                FlatButton:
                    text: 'Disc'
                    size_hint_x: .1
                FlatButton:
                    text: 'Disc %'
                    size_hint_x: .1
                FlatButton:
                    text: 'VAT'
                    size_hint_x: .1
                FlatButton:
                    text: 'Price'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: .2

            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                TextInput:
                    id: code_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: root.update_purchases()
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                TextInput:
                    id: vat_inp
                    size_hint_x: .1
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                TextInput:
                    id: total_inp
                    size_hint_x: .2
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: main_win.bg3
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .3
                    Label:
                        text: 'Product name'
                        size_hint_x: .3
                    Label:
                        text: 'Qty'
                        size_hint_x: .1
                    Label:
                        text: 'Disc'
                        size_hint_x: .1
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                    Label:
                        text: 'Total'
                        size_hint_x: .1
                GridLayout:
                    id: products
                    cols: 1


        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .3

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'The Collector\n123 Main St\nKnowhere\n\nTel: [254] 700666848\n Receipt No: \nDate: \n\n'

    BoxLayout:
        id: footer
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba:(.06,.47,.47,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Maintained by Calvoo Softwares'